<%- include("partials/header.ejs") -%>

    <main>

        <div class="main-content">

            <div class="main-head">
                <h1>Hello!</h1>
            </div>
    
            <div class="para1">
    
                <p class="p1">
                    <span class="truncated"><%=paragraph1%></span>
                </p>
    
            </div>

        </div>

        <% posts.forEach(function(element){ %>
            
            <div class="further-main">

                <div class="further-title">
                    <h1><%= element.title %></h1> 
                </div>

                <div class="further-post">
                    <p class="p1">
                        <span class="truncated"><%= element.content.substring(0, 100)+"..." %></span>
                        <a href="/posts/<%=element.title%>" class="readmore">Read More</a>
                    </p>
                </div>

            </div>
        <% }); %>

    </main>

<%- include("partials/footer.ejs") -%>
